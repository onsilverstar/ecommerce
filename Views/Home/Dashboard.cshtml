@model Product
<div class="container">
    <form asp-action="Dashboard">
            <div class="form-group">
                <input asp-for="Title" class="form-control" type="text" placeholder="Search...">
            </div>
            <div class="form-group"><input class="btn btn-primary" type="submit" value="Filter"> </div>  
        </form>
    <div class="sidebar">
        <h3>Categories</h3>
        @{
            foreach(var category in ViewBag.categories)
            {
                <h4><a asp-action="Filter" asp-route-filtertitle="@category.Title">@category.Title</a></h4>
            }
        }
    </div>
    <div class="content">
        @{
            foreach(var x in ViewBag.products)
            {
                <div class="products">
                    <div class="component">
                        <a asp-action="ViewProduct" asp-route-productid="@x.ProductId"><img src="~/uploads/@x.Image"></a>
                            <h5 class="price">$@x.Price</h5>
                    </div>
                    <h6 id="label">@x.Title</h6>
                </div>}}

</div>

